---
import ConstructionAnimation from './ConstructionAnimation.astro';
import ProgressBar from './ProgressBar.astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  eta?: string;
}

const {
  title = "Full Stack Developer Portfolio",
  subtitle = "Coming Soon",
  description = "I'm crafting a showcase of my journey, projects, and expertise in JavaScript development. Stay tuned for an immersive experience!",
  eta = "Launch Date Coming Soon"
} = Astro.props;
---

<div class="w-full text-center p-8 bg-white/5 dark:bg-accent-dark/10 rounded-[20px] backdrop-blur-lg border border-accent/10">
  <h1 class="text-6xl font-bold leading-tight mb-6">
    {title.split(' ').map((word, i) => 
      i % 2 === 0 ? 
        <span>{word} </span> : 
        <span class="bg-gradient-to-r from-accent via-accent-light to-white bg-[length:400%] bg-clip-text text-transparent">{word} </span>
    )}
  </h1>
  
  <ConstructionAnimation />
  
  <div class="max-w-[600px] mx-auto">
    <h2 class="text-2xl font-bold text-accent dark:text-accent-light mb-4">{subtitle}</h2>
    
    <p class="text-gray-600 dark:text-accent-light/90 text-xl my-8 leading-relaxed">
      {description}
    </p>
    
    <ProgressBar />
    
    <div class="mt-12 flex flex-col gap-2">
      <span class="text-sm text-gray-500 dark:text-accent-light/70 uppercase tracking-widest">Expected Launch</span>
      <span class="text-2xl font-bold text-accent dark:text-accent-light tracking-wider">{eta}</span>
    </div>
  </div>
</div>